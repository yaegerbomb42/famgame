{
    "name": "famgame",
    "version": "1.0.0",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "client": "cd client && npm run dev",
        "server": "cd server && npx nodemon --exec npx ts-node src/index.ts",
        "build": "cd client && npm install && npm run build",
        "vercel-build": "cd client && npm install && npm run build"
    },
    "dependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.6",
        "@types/socket.io": "^3.0.1",
        "concurrently": "^8.2.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "nodemon": "^3.1.11",
        "socket.io": "^4.8.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}